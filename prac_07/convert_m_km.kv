BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to kilometres'
        on_press: app.handle_calculate(int(input_number.text))
    Label:
        id: output_label
        text: '54.717'
        font_size: 48
        color: (1, 1, 0, 1)
